{
  "name": "checkmait-engine",
  "version": "1.0.0",
  "description": "Chess engine with WebSocket support for CheckmAIt",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsc -w",
    "test": "jest --testPathIgnorePatterns=test/integration",
    "test:watch": "jest --watch --testPathIgnorePatterns=test/integration",
    "test:coverage": "jest --coverage --testPathIgnorePatterns=test/integration",
    "test:integration": "jest --testMatch='**/test/integration/**/*.test.ts' --runInBand --silent",
    "test:all": "npm run test && npm run test:integration",
    "docker:build": "docker build -t checkmait-engine .",
    "docker:run": "docker run -p 3000:3000 -p 9000-9010:9000-9010 checkmait-engine",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "chess",
    "websocket",
    "engine"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chess.js": "^1.0.0-beta.8",
    "express": "^4.18.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/ws": "^8.5.8",
    "jest": "^29.7.0",
    "testcontainers": "^11.7.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
